<div class="form-group">
  <label>タイトル：</label>
  <div class="m-2">
    <p><%= h(@memo['title']) %></p>
  </div>
</div>

<div class="form-group">
  <label>内容：</label>
  <div class="m-2">
    <p><%= h(@memo['content']).gsub(/\r?\n/, '<br>') %></p>
  </div>
</div>

<div class="button-group d-flex justify-content-between m-3">
  <a href="/memos/<%= h(@memo['id']) %>/edit" class="btn btn-primary flex-fill mx-1">変更</a>

  <form action="/memos/<%= h(@memo['id']) %>" method="POST" class="flex-fill mx-1">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" class="btn btn-danger w-100" value="削除" onclick="return confirmDelete();">
  </form>
</div>

<div class="button-group d-flex justify-content m-3 mt-3">
  <a href="/" class="btn btn-secondary flex-fill mx-1">戻る</a>
</div>
